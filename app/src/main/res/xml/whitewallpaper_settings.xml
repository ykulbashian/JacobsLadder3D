    <com.mycardboarddreams.jacobsladder.preferences.SeekBarSummaryPreference
        android:icon="@drawable/settings_brightness"
        android:key="@string/key_color_brightness"
        jacobsladder:max="@integer/max_brightness"
        jacobsladder:min="@integer/min_brightness"
        jacobsladder:default_value="@integer/default_brightness"
        />


    <com.mycardboarddreams.jacobsladder.preferences.SeekBarSummaryPreference
        android:key="@string/key_complexity_level"
        android:icon="@drawable/settings_total_icon"
        jacobsladder:max="@integer/max_complexity_level"
        jacobsladder:min="@integer/min_complexity_level"
        jacobsladder:default_value="@integer/default_complexity_level"
