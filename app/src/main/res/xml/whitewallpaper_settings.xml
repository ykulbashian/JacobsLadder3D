			android:title="@string/label_show_walls"
			android:layout="@layout/preference_background_checkbox"
			android:key="@string/key_custom_has_background" />
	
		<com.mycardboarddreams.jacobsladder.preferences.SaveCustomThemePreference
			android:widgetLayout="@layout/preference_save_custom_theme_view"
			android:dialogTitle="@string/save_custom_theme"
			android:dialogLayout="@layout/preference_save_custom_theme"
			android:positiveButtonText="@string/custom_save_button_label"
			android:key="@string/key_save_custom_set"/>

