    <com.mycardboarddreams.jacobsladder.preferences.TextListPopupPreference
		android:title=""
		android:dialogTitle="@string/help_dialog_title"
		android:entryValues="@array/help_dialog_message"
		android:entries="@array/help_dialog_message"
		android:icon="@drawable/icon_help" />

    <com.mycardboarddreams.jacobsladder.preferences.ThemeSelectPreference
